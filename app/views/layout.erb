<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<style> 

body {
  padding: 10px;
 
}

header {
  text-align: center;
  margin: 10px 10px;
  color: tomato;
  font-family: Moonbright Demo;
  font-size:40px;
  text-align: left;
}

form {
  padding: 10px;
  margin-righ: 5px;
}

h2 {
  color: tomato;
  font-family: Moonbright Demo;
  font-size: 84px;
}

.log-sign { 
  display: inline;
  font-family: Georgia;
  font-size: 18px;
  color: #52527a;
}

.button {
  font-family: Georgia;
  color: #52527a;
}

h3 {
  font-family: Georgia;
  color: DodgerBlue;
}

h4 {
  font-family: Georgia;
  padding: 8px 15px 8px 15px;
	border: none;
  border-radius: 4px;
	margin-bottom: 10px;
  color: SlateGray;
}

h5 {
  font-family: Georgia;
}


.link {
  font-family: Georgia;
   color: #52527a;
}

a:link {
  display: inline;
  padding: 3px;
}

a:hover {
  color: tomato;
}

ul {
  display: inline;
  list-style-type: none;
  margin: 0;
  padding: 0;
  font-size: 16px;
}

li {
  display: inline;
  font-family: Georgia;
  font-size: 16px;
}

.error {
  color: blue;
  font-family: Georgia;
}

.new {
  font-family: Georgia;
  font-size: 18px;
  color: SlateGray;
	padding: 8px 15px 8px 15px;
	border: none;
  border-radius: 4px;
	margin-bottom: 10px;
}


.edit {
 font-family: Georgia;
  font-size: 18px;
  color: SlateGray;
	padding: 8px 15px 8px 15px;
	border: none;
  border-radius: 4px;
	margin-bottom: 10px;
}

.img {
  bottom:0;
  width: 100%;
  height: auto;
  display:inline-block;
  background-repeat: no-repeat;
  font-family: Georgia;
}

.footer { 
  bottom: 0; 
  width: 100%; 
  height: 40px; 
  color: SlateGray;
  margin: auto;
  font-family: Georgia;
  color: SlateGray;
  }

</style> 

    <body>
      <h2>Travel Log</h2> 

        <div class="error">
            <% if flash[:error] %>
                <h3 style="color:red;"><%= flash[:error] %></h3>
            <% end %> 
        </div>

          <div class="message">
            <% if flash[:message] %>
                <h3 style="color:green;"><%= flash[:message] %></h3>
            <% end %> 
          </div>

            <div class="nav">
              <% if current_user %>
                  <ul>
                  <li><a class="link" href='/blogs/new'>New Blog</a></li>
                  <li><a class="link" href='/blogs'>All Blogs</a></li>
                  <li><a class="link" href='/logout'>Logout</a></li> 
                  </ul>
              <% end %>     
        

            <%= yield %>
    
          <br><br>
            <footer class="footer">
              <div id="copyright">&copy; 2020 Travel Log</div>
            </footer>
       
    </body>
</html>

