    <body>


      <div class="wrapper">
          <% if flash[:error] %>
              <h3 style="color:red;"><%= flash[:error] %></h3>
          <% end %> 
      </div>

        <div class="wrapper">
          <% if flash[:message] %>
              <h3 style="color:green;"><%= flash[:message] %></h3>
          <% end %> 
        </div>

          <div class="nav">
            <% if user_logged_in? %>
                <h2>Welcome, <%= @user.user_name.capitalize %></h2> 
                <ul>
                <li><a href='/blogs'>All Blogs</a></li>
                <li><a href='/blogs/new'>Create New Log</a></li>
                <li><a href='/logout'>Logout</a></li> 
                </ul>
            <% end %>
   

          <%= yield %>
