<!DOCTYPE html>
    <body> 
     <h2>Create new blog</h2>
         <p><% if @message %></p>
                <p><%= @message %></p>
            <% end %>
            <div>
                <form class="" action="/blogs" method="POST">
                    <table style='text-align: left'>  
                        <tr>
                            <td>
                            <label for="title">Title: </label>
                            <input type="text" name="title" placeholder="Title" id="title">
                            <br><br>
                            </td>
                        </tr>
                        <tr>  
                            <td>
                            <label for="location">Location: </label>
                            <input type="text" name="location" placeholder="Location" id="location">
                            </td>
                            <br><br>
                        </tr>
                        <tr>
                            <td>
                            <label for="description">Description: </label>
                            <textarea type="text" name="description" placeholder="Write a description" id="description"></textarea>
                            </td>
                            <br><br>
                        </tr>
                        <tr>
                            <td>
                            <label for="text">Image </label>
                            <input type="text" name="image_url" placeholder="url" id="text" value="">
                            <br><br>
                            <input type="submit" name="" value="Submit Blog">
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
    </body>
</html>
