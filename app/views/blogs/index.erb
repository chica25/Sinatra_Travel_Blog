
   <% if @user.blogs.blank? %>
        <%= "You do not have any blogs on your list."%> 
        <b><a href='/blogs/new' class="button"><br> Add a Blog!</a></b>
  <% else %>    
     <h2>All Blogs</h2>
      <% @user.blogs.each do |blog| %><br> 
        <p><b>Title:</b> <%= blog.title %></p>
        <p><b>Location:</b> <%= blog.location %></p> 
        <p><b>Description:</b> <%= blog.description %></p>
        <b>Image</b>
        <p><img src="<%= blog.image_url %>" alt="<%= blog.image_url %>" height="400" width="600"></p>   
            <a href="/blogs/<%= blog.id %>/edit"><button>Edit</button></a>
            <br> <br>
            <form action="/blogs/<%= blog.id %>/delete" method="POST">   
              <input id="hidden" type="hidden" name="_method" value="DELETE">
              <input type="submit" value="Delete">     
            </form>       
    <% end %>
<% end %>
<br><br>
