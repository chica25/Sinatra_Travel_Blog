
   <h2>Welcome, <%= @user.user_name.capitalize %></h2>   
        <% @blogs.each do |blog| %><br> 
        <p><h4>Title:</h4><a href="/blogs/<%= blog.id %>"><%= blog.title %></a></p>
          <p><h4>Location:</h4> <%= blog.location %></p> 
          <p><h4>Description:</h4> <%= blog.description %></p>
        <p><h4>Image</h4></p>
        <p><img src="<%= blog.image_url %>" alt="image" height="400" width="600"></p> 
   <% if blog.user_id == @user.id%>
        <a href="/blogs/<%= blog.id %>/edit"><button>Edit</button></a>
         <% end %> 
      <% end %>       
 


      
          