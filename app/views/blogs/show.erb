
<h3>New Blog</h3>
    <br>
     <h4>Title:</h4> <%= @blog.title %>
    <div><img class="img" src="<%= @blog.image_url %>" alt="<%= @blog.image_url %>" height="400" width="600"></div>
    <h4>Location:</h4> <%= @blog.location %>
    <h4>Description:</h4> <%= @blog.description %>
       
    
    <% if @blog.user_id == current_user.id%>
        <form class="form" action="/blogs/<%= @blog.id %>" method="POST">   
            <input id="hidden" type="hidden" name="_method" value="DELETE">
            <input type="Submit" value="Delete">     
        </form>
    <%end%>