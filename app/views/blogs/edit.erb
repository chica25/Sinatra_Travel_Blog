<form action="/blogs/<%= @blog.id %>" method="POST">

    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <label for="title">Title:</label>
    <input type="text" name="title" placeholder="title" value="<%= @blog.title %>">
    <br><br>
    <label for="location">Location:</label>
    <input type="text" name="location" placeholder="location" value="<%= @blog.location %>">
    <br><br>
    <label for="description">Description:</label>
    <textarea input name="description" placeholder="description" value="<%= @blog.description %>">
    </textarea>
    <br><br>
    <label for="image_url">Image:</label>
    <input type="text" name="image_url" placeholder="url" value="<%= @blog.image_url %>">
     <br><br>
    <input type="submit" value="Save changes">
   

</form>


   
